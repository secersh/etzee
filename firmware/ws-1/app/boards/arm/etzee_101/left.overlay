&pinctrl {
    uart0_default: uart0_default {
        group1 {
            psels = <NRF_PSEL(UART_RX, 1, 6)>; // RX = P1.06
            bias-pull-up;
        };
        group2 {
            psels = <NRF_PSEL(UART_TX, 1, 4)>; // TX = P1.04
        };
    };

    uart0_sleep: uart0_sleep {
        group1 {
            psels = <NRF_PSEL(UART_RX, 1, 6)>,
                    <NRF_PSEL(UART_TX, 1, 4)>;
            low-power-enable;
        };
    };
};

